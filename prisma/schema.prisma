generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id          String   @id @default(cuid())
  title       String
  description String?
  ownerId     String   @db.Uuid
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  nodes Node[]

  @@index([ownerId, updatedAt(sort: Desc)])
}

enum NodeType {
  root_question
  ai_answer
  followup_question
  followup_answer
}

model Node {
  id        String   @id @default(cuid())
  boardId   String
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)

  parentId  String?
  parent    Node?    @relation("NodeToChildren", fields: [parentId], references: [id], onDelete: SetNull)
  children  Node[]   @relation("NodeToChildren")

  rootId    String?
  root      Node?    @relation("NodeToRoot", fields: [rootId], references: [id], onDelete: SetNull)
  rootDesc  Node[]   @relation("NodeToRoot")

  type      NodeType
  content   String   @db.Text
  x         Int
  y         Int
  width     Int
  height    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([boardId])
  @@index([parentId])
  @@index([rootId])
}
